<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DJExperience" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_night</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Accent color -->
        <item name="colorAccent">@color/color_accent</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/color_accent</item>
        <!-- enable window content transitions -->
        <item name="android:windowActivityTransitions">true</item>
        <!-- Background -->
        <item name="android:background">@color/color_primary</item>
        <!-- Styles -->
        <item name="textInputStyle">@style/MyTextInputLayout</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/color_background</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="OnBoardingItemTheme">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="AppBarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/color_primary</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppBarTheme.Menu" parent="ThemeOverlay.AppCompat">
        <item name="android:background">@color/color_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:popupBackground">@color/color_primary</item>
    </style>

    <style name="BottomNavigationTheme">
        <item name="android:background">@color/color_navigation_bottom_background</item>
        <item name="itemIconTint">@color/color_navigation_text</item>
        <item name="itemTextColor">@color/color_navigation_text</item>
    </style>

    <style name="MyTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingStart">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingEnd">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="MySpinner" parent="Widget.AppCompat.Spinner">
        <item name="overlapAnchor">false</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@color/color_primary</item>
        <item name="queryHint">@string/searchSV_hint</item>
        <item name="android:inputType">text</item>

        <item name="android:textColor">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>
</resources>