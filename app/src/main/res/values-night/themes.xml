<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DJExperience" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary_night</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary</item>ยก
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/color_secondary_night</item>
        <!-- enable window content transitions -->
        <item name="android:windowActivityTransitions">true</item>
        <!-- App bar -->
        <item name="actionOverflowMenuStyle">@style/AppBarTheme.Menu</item>
    </style>

    <style name="SplashTeme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="BottomNavigationTheme">
        <item name="android:background">@color/color_navigation_bottom_background</item>
        <item name="itemIconTint">@color/color_navigation_text</item>
        <item name="itemTextColor">@color/color_navigation_text</item>
    </style>

    <style name="AppBarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="titleTextColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="AppBarTheme.Menu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/color_primary</item>
    </style>

    <style name="Theme.DJExperience.StatusBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_night</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/color_accent</item>
    </style>
</resources>